{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:@next/next/recommended"
  ],
  "rules": {
    "react/jsx-filename-extension": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "max-len": "off",
    "import/prefer-default-export": "off",
    "react/jsx-props-no-spreading": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "jsconfig.json"
      }
    }
  }
}
